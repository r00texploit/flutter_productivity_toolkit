{
  "enabled": true,
  "name": "API Postman Testing",
  "description": "Monitors Dart/Flutter source code changes and automatically runs Postman collection tests to validate API functionality",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "lib/**/*.dart",
      "test/**/*.dart",
      "pubspec.yaml",
      "pubspec.lock",
      "analysis_options.yaml",
      "build.yaml",
      "openapi.yaml",
      "openapi.yml",
      "swagger.yaml",
      "swagger.yml",
      "api.yaml",
      "api.yml"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Dart/Flutter source code or configuration has been modified. Please retrieve the contents of the .postman.json file. If the file does not exist or is empty, create a Postman collection for the API. If it exists, get the collection ID and run the collection, showing me the results and propose fixes for any errors found."
  }
}